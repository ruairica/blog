---
import Layout from "./Layout.astro";
const date = Intl.DateTimeFormat().format(
  new Date(Astro.props.frontmatter.date)
);
---

<Layout>
  <div class="heading">
    <a href="/">&larr; Back</a>
    <p>{date}</p>
  </div>
  <article>
    <slot />
  </article>

  <style>
    h1 {
      font: 1.5rem;
    }
    .heading {
      display: flex;
      justify-content: space-between;
      align-items: center;
      > a {
        display: block;
        font-size: 1.5rem;
      }

      > p {
        font-weight: 600;
        font-size: 1.5rem;
      }
    }
  </style>
</Layout>
